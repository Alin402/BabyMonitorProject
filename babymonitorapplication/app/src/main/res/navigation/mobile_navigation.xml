<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_signup">

    <fragment
        android:id="@+id/navigation_signup"
        android:name="com.example.babymonitorapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_signup" />

    <fragment
        android:id="@+id/navigation_signin"
        android:name="com.example.babymonitorapplication.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_signin" />
    <fragment
        android:id="@+id/navigation_main"
        android:name="com.example.babymonitorapplication.ui.main.MainFragment"
        android:label="@string/title_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/navigation_register"
        android:name="com.example.babymonitorapplication.ui.register.RegisterFragment"
        android:label="@string/title_register"
        tools:layout="@layout/fragment_register" />
</navigation>